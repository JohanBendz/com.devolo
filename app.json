{
  "id": "com.devolo",
  "sdk": 2,
  "name": {
    "en": "Devolo"
  },
  "version": "1.2.0",
  "compatibility": ">=1.5.6",
  "description": {
    "en": "Devolo Home Control Z-Wave devices for Homey",
    "nl": "Devolo Home Control Z-Wave devices voor Homey"
  },
  "category": [
    "appliances",
    "lights",
    "climate",
    "security"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "apps@athom.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Bram Oosterhuis",
        "email": "bram.oosterhuis.nl@gmail.com"
      },
      {
        "name": "Michel de Ru",
        "email": "michel@de-ru.net"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "014G0159_btn_1",
        "title": {
          "en": "Button pressed",
          "nl": "Knop ingedrukt"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=014G0159"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "014G0159",
      "class": "thermostat",
      "name": {
        "en": "Room Thermostat",
        "nl": "Kamerthermostaat"
      },
      "capabilities": [
        "measure_battery",
        "target_temperature",
        "measure_temperature"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "decimals": 1
        }
      },
      "images": {
        "large": "/drivers/014G0159/assets/images/large.png",
        "small": "/drivers/014G0159/assets/images/small.png"
      },
      "zwave": {
        "manufacturerId": 2,
        "productTypeId": [
          3
        ],
        "productId": [
          32784
        ],
        "wakeUpInterval": 3600,
        "learnmode": {
          "image": "/drivers/014G0159/assets/learnmode.svg",
          "instruction": {
            "en": "Press the button on top of the Room Thermostat to start pairing.",
            "nl": "Druk op de knop boven op de Kamerthermostaat om het apparaat toe te voegen."
          }
        },
        "unlearnmode": {
          "image": "/drivers/014G0159/assets/learnmode.svg",
          "instruction": {
            "en": "Press the button on top of the Room Thermostat to remove the device.",
            "nl": "Druk op de knop boven op de Kamerthermostaat om het apparaat te verwijderen."
          }
        },
        "zwaveAllianceProductId": 1063,
        "imageRemotePath": "http://products.z-wavealliance.org/ProductImages/Index?productName=ZC08-14070002",
        "associationGroups": [],
        "associationGroupsOptions": {}
      }
    }
  ]
}
